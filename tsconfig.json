{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "es5",
        "module": "esnext",
        "jsx": "react",
        "declaration": true,
        "declarationDir": "lib",
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
